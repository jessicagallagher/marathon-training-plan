// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model TrainingWeek {
  id           Int            @id @default(autoincrement())
  weekNumber   Int
  weekStart    DateTime
  weekEnd      DateTime
  TrainingPlan TrainingPlan[]
}

model Users {
  id                   Int            @id @default(autoincrement())
  name                 String
  email                String
  password             String         @default("password")
  TrainingPlan         TrainingPlan[]
  actualMilesRun       Decimal
  paceMinutes          Int
  paceSeconds          Int
  weekTotalMiles       Decimal
  averageWeeklyPace    Decimal
  paceGapToGoal        Decimal
  totalMilesOverall    Decimal
  totalAveragePace     Decimal
  averagePaceGapToGoal Decimal
}

model TrainingPlan {
  id                   Int          @id @default(autoincrement())
  userId               Int
  user                 Users        @relation(fields: [userId], references: [id])
  trainingWeekNumberId Int
  trainingWeekNumber   TrainingWeek @relation(fields: [trainingWeekNumberId], references: [id])
  day                  String
  isRun                Boolean      @default(false)
  isWorkout            Boolean      @default(false)
  isRest               Boolean      @default(true)
  workoutType          String
  targetMiles          Decimal
}
