// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model TrainingWeek {
  id           Int            @id @default(autoincrement())
  weekNumber   Int
  weekStart    String
  weekEnd      String
  TrainingPlan TrainingPlan[]
}

model User {
  id                   Int            @id @default(autoincrement())
  name                 String
  email                String
  password             String         @default("password")
  actualMilesRun       Decimal?       @db.Decimal(4, 2)
  paceMinutes          Int?
  paceSeconds          Int?
  weekTotalMiles       Decimal?       @db.Decimal(4, 2)
  averageWeeklyPace    Decimal?       @db.Decimal(4, 2)
  paceGapToGoal        Decimal?       @db.Decimal(4, 2)
  totalMilesOverall    Decimal?       @db.Decimal(5, 2)
  totalAveragePace     Decimal?       @db.Decimal(4, 2)
  averagePaceGapToGoal Decimal?       @db.Decimal(4, 2)
  TrainingPlan         TrainingPlan[]
}

model TrainingPlan {
  id           Int          @id @default(autoincrement())
  userId       Int
  user         User         @relation(fields: [userId], references: [id])
  weekId       Int
  trainingWeek TrainingWeek @relation(fields: [weekId], references: [id])
  dayOfWeek    String
  workoutType  String
  targetMiles  Decimal      @db.Decimal(4, 2)
}
